<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="miAutoDB">

        <!-- URL de mati: jdbc:hsqldb:file:/home/matias/Downloads/hsqldb-2.7.2/hsqldb/db;shutdown=true -->
        <!-- URL de chev: jdbc:hsqldb:hsql://localhost/miAutoDB;shutdown=true -->

        <class>entities.User</class>
        <class>entities.Car</class>
        <class>entities.Familia</class>


        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbc.JDBCDriver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:hsql://localhost/miAutoDB;shutdown=true"/>
            <property name="javax.persistence.jdbc.user" value="sa"/>
            <property name="javax.persistence.jdbc.password" value=""/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect" />

            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>


        </properties>

    </persistence-unit>

</persistence>